<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e88e5"
    tools:context="com.example.customerregistration.WalletActivtiy">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wallet_title"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:text="Wallet"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginTop="160dp"
        android:layout_height="200dp"
        android:id="@+id/wallet_card"
        app:cardBackgroundColor="#e0f7fa"
        app:cardCornerRadius="12dp"
        app:cardElevation="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:id="@+id/customer_id_container"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorGrey2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_customer_Id"
                android:hint="Customer Id"
                android:layout_width="match_parent"
                android:textColor="@color/colorGrey2"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:visibility="gone"
            android:id="@+id/balance_container"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="24dp"
                android:src="@drawable/money"
                android:layout_height="60dp"
                android:id="@+id/money_image"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_height="60dp"
                android:id="@+id/balance_tv"
                android:textSize="50sp"
                android:textAlignment="viewStart"
                android:text="90000" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="62dp"
            android:layout_below="@+id/wallet_card"
            android:id="@+id/check_balance_image"
            android:background="@drawable/circle"
            android:src="@drawable/rupee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_balance_image"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="48dp"
        android:text="Check Balance"/>



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/wallet_card"
            android:id="@+id/add_balance_image"
            android:background="@drawable/circle"
            android:src="@drawable/newplus"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_balance_image"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="54dp"
        android:text="Add Money"/>


